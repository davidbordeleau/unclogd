<link href="https://fonts.googleapis.com/css?family=Crimson+Text|Work+Sans" rel="stylesheet">

<div class="main-container">
  <a href="/items" class="browse-container">
    <div class = "col1">
    </div>

    <div class = "col2">
     <%= image_tag 'magnifying-glass-white.svg', class: "picture" %>
      <h1>Browse</h1>
      <p>⟶</p>
    </div>

    <div class = "col3">
      <div class="text-container">
        <p >Browse a skin care product<br>Browse through carefully chosen skincare products</p>
      </div>
    </div>
  </a>


  <a href="/items" class="find-container">
    <div class = "col1">
    </div>

    <div class = "col2">
     <%= image_tag 'magnifying-glass-white.svg', class: "picture" %>
      <h1>Browse</h1>
      <p>⟶</p>
    </div>

    <div class = "col3">
      <div class="text-container">
        <p >Browse a skin care product<br>Browse through carefully chosen skincare products</p>
      </div>
    </div>
  </a>


  <div class="check-container">
        <div class = "col1">
        </div>

    <% if current_user %>
      <% link_to user_path(current_user) do %>
        <div class = "col2">
          <%= image_tag 'tick-white.svg', class: "picture" %>
          <h1>Check</h1>
          <p>⟶</p>
        </div>
      <% end %>
    <% else %>
      <% link_to new_user_session_path do %>
        <div class ="col2">
          <%= image_tag 'tick-white.svg', class: "picture" %>
          <h1>Check</h1>
          <p>⟶</p>
        </div>
      <% end %>
    <% end %>

      <div class = "col3">
        <div class="text-container">
          <p >Browse a skin care product<br>Browse through carefully chosen skincare products</p>
        </div>
      </div>
  </div>

</div>

