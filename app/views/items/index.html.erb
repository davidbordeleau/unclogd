<div class = "inner-container">
  <div class = "row1">
    <div class = "colA">
      <%= image_tag 'face1.png', class: "picture" %>
    </div>
    <div class = "colB">
      <%= image_tag 'face2.png', class: "picture" %>
    </div>
    <div class = "colC">
      <%= image_tag 'face3.png', class: "picture" %>
    </div>
    <div class = "colD">
      <%= image_tag 'face4.png', class: "picture" %>
    </div>
  </div>
  <div class = 'search-bar'>
    <%= form_tag items_path, method: :get, class: "search-form" do %>
    <%= text_field_tag :query,
    params[:query],
    class: "flash flash-success",
    placeholder: "Find an item"%>
    <button type="submit" class="button1"><i class="fa fa-search"></i></button>
    <% end %>
  </div>

  <div class = "container">
    <div class = "row">
    <% @items.each do |item| %>
      <div class="col-lg-3 col-md-4 col-sm-6">
        <%= link_to item_path(item) do %>
        <div class = "index-card">
          <div class = "picture-container">
            <div class = "item-picture">
              <%= image_tag(item.picture_url) %>
            </div>
          </div>
          <div>
            <h5><%= item.name.truncate(29) %></h5>
            <h5 class="padding-card"><strong><%= item.brand %></strong></h5>
          </div>
        </div>
      <% end %>
      </div>
    <% end %>
    </div>
  </div>
</div>
