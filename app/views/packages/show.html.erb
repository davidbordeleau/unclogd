<link href="https://fonts.googleapis.com/css?family=Crimson+Text|Work+Sans|Karla" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

<div>
  <div>
    <img src="<%= image_path("Faces.jpg") %>" alt="" class="picture-front" width="400" height="250">
  </div>
  <div class = "row2">

    <% @package.package_items.each  do |package_item| %>
    <% item = package_item.item  %>
    <div class = "col 1">
      <%= link_to item_path(item) do %>
      <div class = "index-card">
        <div class = "picture-container">
          <div class = "item-picture">
            <%= image_tag(item.picture_url) %>
          </div>
        </div>
        <div class = "information">
          <h5><%= item.name %></h5>
          <h5><%= item.brand %></h5>
          <%= link_to package_item_path(package_item), method: :delete, data: {confirm: "are you sure?"} do  %>
            <i class="fas fa-trash"></i>
          <% end %>

        </div>
      </div>
      <% end %>
    </div>
    <% end %>



    <div class = "shopping-cart">
      <% if @existing_order.nil? %>
        <%= simple_form_for @new_order do |f| -%>
          <%= f.hidden_field :package_id %>
          <%= f.button :button, "Select" %>
      <% end %>
      <% end %>
    </div>

  </div>
</div>


