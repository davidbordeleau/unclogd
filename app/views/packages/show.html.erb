<link href="https://fonts.googleapis.com/css?family=Crimson+Text|Work+Sans|Karla" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<div class="container">
  <h2> Your Basket</h2> </br>
  <div class="shopping">
    <h4 class="h4"> Product </h4>
    <%= simple_form_for @new_order do |f| -%>
    <%= f.hidden_field :package_id %>
    <script src="https://checkout.stripe.com/checkout.js" class="stripe-button" data-key="<%= Rails.configuration.stripe[:publishable_key] %>" data-name="Your Order" data-email="<%= current_user.email %>" data-description="Please enter the followings:" data-amount="<%= @new_order.amount_cents %>" data-currency="<%= @new_order.amount.currency %>">
    </script>
    <% end %>
  </div>
  <hr />
  <% @package.package_items.each  do |package_item| %>
  <% item = package_item.item  %>
  <%= render 'items/item_card', { item: item, package_item: package_item } %>
  <hr />
  <% end %>
</div>
<% if @existing_order %>
<%= link_to order_path(@existing_order),
  method: :delete,
  data: { confirm: "Are you sure?" } do %>
<i class="fas fa-trash"></i>
<% end %>
<% end %>
