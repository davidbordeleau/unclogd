<h1>Order</h1>
<ul>
  <li>Status: <%= @order.status %></li>
  <li>Item: <%= @order.package_sku %></li>
  <li>Amount: <%= humanized_money_with_symbol(@order.amount) %></li>
<ul>

<% if @number_package >= 2 && @existing_order.nil? %>
  <%= simple_form_for @new_order do |f| -%>
    <%= f.hidden_field :package_id %>
    <%= f.button :submit, "order package" %>
  <% end %>
<% end -%>

<% if @existing_order %>
  <%= link_to "Delete", edit_order(@existing_order),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
<% end %>
